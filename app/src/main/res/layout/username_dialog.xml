<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="appState"
        type="com.newfivefour.githubevents.AppState"
        />
    <variable
        name="handlers"
        type="com.newfivefour.githubevents.MainActivityHandlers"
        />
  </data>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="8dp"
      >
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#fff"
        android:lines="5"
        app:textIfNotBlank="@{appState.title}"
        android:hint="The new username"
        android:onEditorAction="@{handlers.onUsernameChange}"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:layout_margin="16dp"
        />
  </RelativeLayout>
</layout>
